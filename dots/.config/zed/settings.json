{
  // ====== CORE EDITOR SETTINGS ======
  "double_click_in_multibuffer": "open",
  "theme": "Catppuccin Macchiato (maroon)",
  "icon_theme": "Catppuccin Mocha",
  "vim_mode": true,
  "auto_update": false,
  "autosave": "on_focus_change",
  "use_smartcase_search": true,
  "show_whitespaces": "boundary",
  "use_system_path_prompts": false,
  "use_system_prompts": false,
  "load_direnv": "direct",

  // ====== FONTS & TYPOGRAPHY ======
  "ui_font_family": "Ubuntu Nerd Font Propo",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 300,
  "buffer_line_height": "standard",
  "buffer_font_size": 14.5,

  // ====== UI LAYOUT & PANELS ======
  "project_panel": {
    "hide_root": true,
    "dock": "right",
    "entry_spacing": "standard",
    "indent_size": 22
  },
  "git_panel": {
    "sort_by_path": true,
    "dock": "right"
  },
  "debugger": {
    "dock": "bottom"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.9
  },
  "gutter": {
    "runnables": false,
    "folds": false,
    "min_line_number_digits": 0
  },

  // ====== TABS & NAVIGATION ======
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "neighbour"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": true,
    "code_actions": true
  },
  "title_bar": {
    "show_branch_icon": true
  },
  // ====== CODE EDITING FEATURES ======
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "format_on_save": "on",
  "indent_guides": {
    "coloring": "indent_aware"
  },
  // ====== AI ASSISTANT & AGENT ======
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true
  },
  // ====== EXTENSIONS ======
  "auto_install_extensions": {
    "awk": true,
    "basher": true,
    "dockerfile": false,
    "emmet": true,
    "env": true,
    "git-firefly": true,
    "harper": true,
    "html": true,
    "hyprlang": true,
    "ini": true,
    "log": true,
    "lua": true,
    "marksman": true,
    "make": true,
    "nix": true,
    "php": true,
    "scheme": true,
    "sql": true,
    "toml": true
  },
  // ====== FILE TYPES & ASSOCIATIONS ======
  "file_types": {
    "CSS": ["**/rofi/**/*rasi"],
    "Hyprlang": ["**/hypr/**/*conf", "**/myde/**/*conf"],
    "ini": ["**mime**"],
    "Markdown": ["**/git/*commit*.txt"],
    "Shell Script": ["**/uwsm/**"]
  },
  // ====== TERMINAL ======
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font"
  },
  // ====== IMAGE VIEWER ======
  "image_viewer": {
    "unit": "decimal"
  },
  // ====== PRIVACY & TELEMETRY ======
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // ====== LANGUAGE SERVERS =======
  "lsp": {
    "clangd": {
      "binary": {
        // "arguments": ["--experimental-modules-support"]
      }
    }
  },
  "languages": {
    "Markdown": {
      "remove_trailing_whitespace_on_save": false
    }
  }
}
